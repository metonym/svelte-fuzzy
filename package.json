{
  "name": "svelte-fuzzy",
  "version": "0.3.0",
  "license": "MIT",
  "description": "Lightweight Svelte fuzzy search highlighting using fuse.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "src/Fuzzy.svelte",
  "module": "lib/index.mjs",
  "main": "lib/index.js",
  "scripts": {
    "start": "rollup -c rollup.client.config.js -w",
    "build": "rm -rf dist && rollup -c && rollup -c rollup.client.config.js",
    "postbuild": "hash-static 'dist/index.html'",
    "deploy": "node gh-pages.js",
    "test": "jest --coverage",
    "test:tdd": "jest --watch",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "format-fuse.js": "^1.0.2",
    "fuse.js": "^3.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/svelte": "^3.0.0",
    "@types/jest": "^24.9.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "core-js": "^3.3.4",
    "gh-pages": "^2.2.0",
    "hash-static": "^0.1.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "jest-transform-svelte": "^2.1.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "pretty-quick": "^2.0.0",
    "rollup": "^1.25.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.1.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "svelte": "^3.19.2",
    "svelte-loader": "^2.13.6",
    "tslib": "^1.10.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --pattern 'src/**/*.{ts,js,svelte}' --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint --fix -p ."
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env"
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": "jest-transform-svelte",
      "^.+\\.[t|j]s?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "coveragePathIgnorePatterns": [
      "Fuse.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-fuzzy.git"
  },
  "homepage": "https://github.com/metonym/svelte-fuzzy",
  "keywords": [
    "svelte",
    "svelte 3",
    "fuzzy",
    "fuse.js",
    "highlight",
    "text highlighting"
  ],
  "files": [
    "lib",
    "src"
  ],
  "bugs": "https://github.com/metonym/svelte-fuzzy/issues"
}
