{
  "name": "svelte-fuzzy",
  "version": "0.2.0",
  "license": "MIT",
  "description": "Lightweight Svelte fuzzy search highlighting using fuse.js",
  "author": "Eric Liu (https://github.com/metonym)",
  "svelte": "src/Fuzzy.svelte",
  "module": "lib/index.mjs",
  "main": "lib/index.js",
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "lint": "tslint --fix -p .",
    "test": "jest --coverage",
    "test:tdd": "jest --watch",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "format-fuse.js": "^1.0.0",
    "fuse.js": "^3.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/jest": "^24.0.20",
    "hash-static": "^0.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "rollup": "^1.25.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.1.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-svelte": "^5.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "shelljs": "^0.8.3",
    "svelte": "^3.12.1",
    "ts-jest": "^24.1.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metonym/svelte-fuzzy.git"
  },
  "homepage": "https://github.com/metonym/svelte-fuzzy",
  "keywords": [
    "svelte",
    "svelte 3",
    "fuzzy",
    "fuse.js",
    "highlight",
    "text highlighting"
  ],
  "files": [
    "lib"
  ],
  "bugs": "https://github.com/metonym/svelte-fuzzy/issues"
}
